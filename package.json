    "@types/jest-dev-server": "^5.0.0",
    "@types/node": "^20.4.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "axios": "^1.4.0",
    "bump-cli": "^2.7.0",
    "dayjs": "^1.11.9",
    "esbuild-register": "^3.4.2",
