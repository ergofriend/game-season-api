    "@types/jest-dev-server": "^5.0.0",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "axios": "^1.3.4",
    "bump-cli": "^2.5.0",
    "dayjs": "^1.11.7",
